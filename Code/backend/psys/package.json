{
  "name": "ejt",
  "version": "1.0.0",
  "description": "ejt",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "parcel": "parcel build src/public/js/main.ts -d dist/public/js",
    "build": "npm-run-all clean lint tsc copy-assets parcel",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "start": "node .",
    "initdb": "ts-node tools/initdb",
    "doc": "jsdoc dist/index.js dist/routes/index.js"
  },
  "author": {
    "name": "Paul Finkbeiner",
    "email": "paul_finkbeiner@arburg.com",
    "url": "http://www.arburg.com"
  },
  "keywords": [],
  "dependencies": {
    "axios": "^0.19.2",
    "cookie-parser": "^1.4.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "ejs": "~2.6.1",
    "express": "~4.16.1",
    "express-session": "^1.15.6",
    "helmet": "^3.23.2",
    "http-errors": "~1.6.3",
    "jsdoc": "^3.6.4",
    "morgan": "~1.9.1",
    "node-json-db": "^1.1.0",
    "nodemailer": "^6.4.10",
    "parcel": "^1.12.4",
    "pg": "^7.7.1",
    "pg-promise": "^8.5.2",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.11",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.10",
    "@types/materialize-css": "^1.0.5",
    "@types/node": "^10.12.10",
    "@types/pg": "^7.4.11",
    "@types/shelljs": "^0.8.0",
    "fs-extra": "^7.0.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.2",
    "shelljs": "^0.8.3",
    "ts-jest": "^26.1.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  }
}
